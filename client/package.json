{
  "name": "onestop-client",
  "version": "1.0.0",
  "description": "The web client for the OneStop discovery service",
  "repository": "ssh://git@github.com:cires-ncei/onestop.git",
  "license": "GPL-2.0",
  "scripts": {
    "dev": "webpack-dev-server --progress --colors & npm run testAndWatch",
    "test": "NODE_ENV=test mocha --recursive ./test",
    "testAndWatch": "NODE_ENV=test mocha --recursive ./test -w --watch-extensions js,jsx",
    "build": "npm install && npm test && NODE_ENV=production ./node_modules/.bin/webpack --config webpack.config.prod.js -p",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "esri-leaflet": "^1.0.4",
    "font-awesome": "^4.6.3",
    "isomorphic-fetch": "^2.2.1",
    "leaflet": "^0.7.7",
    "leaflet-draw": "^0.3.0",
    "lodash": "^4.14.1",
    "moment": "^2.14.1",
    "rc-calendar": "^7.5.1",
    "rc-collapse": "^1.6.6",
    "rc-time-picker": "^2.2.1",
    "react": "^15.3.0",
    "react-addons-css-transition-group": "^15.4.2",
    "react-day-picker": "^2.4.1",
    "react-dom": "^15.3.0",
    "react-hot-loader": "^3.0.0-beta.6",
    "react-redux": "^4.4.5",
    "react-router": "^3.0.0",
    "react-router-redux": "^4.0.7",
    "react-toggle-display": "^2.1.1",
    "redux": "^3.5.2",
    "redux-immutable": "^3.0.6",
    "redux-seamless-immutable": "^0.3.0",
    "redux-thunk": "^2.0.1",
    "redux-watch": "^1.1.1",
    "rison": "^0.1.1",
    "seamless-immutable": "^7.0.1"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel": "^6.5.0",
    "babel-cli": "^6.7.0",
    "babel-core": "^6.24.0",
    "babel-loader": "^6.4.1",
    "babel-plugin-webpack-alias": "^1.3.1",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-2": "^6.13.0",
    "babel-preset-stage-3": "^6.22.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "chai-immutable": "^1.5.3",
    "css-loader": "^0.26.1",
    "eslint": "^2.9.0",
    "eslint-loader": "^1.3.0",
    "fetch-mock": "^5.0.3",
    "file-loader": "^0.8.5",
    "html-webpack-plugin": "^2.28.0",
    "image-webpack-loader": "^1.8.0",
    "mocha": "^2.4.5",
    "nock": "^8.0.0",
    "path": "^0.12.7",
    "postcss-assets": "^4.1.0",
    "postcss-import": "^9.1.0",
    "postcss-loader": "^1.2.1",
    "precss": "^1.4.0",
    "purecss": "^0.6.0",
    "react-css-modules": "^3.7.6",
    "react-hot-loader": "^3.0.0-beta.6",
    "redux-mock-store": "^1.1.2",
    "sinon": "^1.17.7",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^2.4.1",
    "webpack-dev-server": "^2.2.1"
  },
  "babel": {
    "presets": [
      [
        "es2015",
        {
          "modules": false
        }
      ],
      "react",
      "stage-2"
    ],
    "env": {
      "test": {
        "presets": [
          "es2015"
        ]
      }
    },
    "plugins": [
      "react-hot-loader/babel"
    ]
  }

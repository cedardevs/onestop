{
  "description": "[RELEASE-DATE] Transforms and reduces fields from staging_granule to search_granule",
  "version": 1,
  "processors": [
    {
      "foreach": {
        "field": "keywords",
        "processor": {
          "foreach": {
            "field": "_ingest._value.values",
            "processor": {
              "append": {
                "field": "keywordValues",
                "value": [
                  "{{_ingest._value}}"
                ]
              }
            },
            "on_failure": [
              {
                "append": {
                  "field": "keywordValues",
                  "value": [
                    "{{_ingest._value.values}}"
                  ]
                }
              }
            ]
          }
        },
        "on_failure": [
          {
            "append": {
              "field": "keywordValues",
              "value": [
                "{{keywords.values}}"
              ]
            }
          }
        ]
      }
    },
    {
      "date": {
        "field": "temporalBounding.beginDate",
        "target_field": "beginDate",
        "formats": ["ISO8601"],
        "ignore_failure": true
      }
    },
    {
      "set": {
        "field": "beginYear",
        "value": "{{temporalBounding.beginYear}}"
      }
    },
    {
      "convert": {
        "field": "beginYear",
        "type": "auto"
      }
    },
    {
      "date": {
        "field": "temporalBounding.endDate",
        "target_field": "endDate",
        "formats": ["ISO8601"],
        "ignore_failure": true
      }
    },
    {
      "set": {
        "field": "endYear",
        "value": "{{temporalBounding.endYear}}"
      }
    },
    {
      "convert": {
        "field": "endYear",
        "type": "auto"
      }
    },
    {
      "remove": {
        "field": [
          "purpose",
          "status",
          "credit",
          "hierarchyLevelName",
          "alternateTitle",
          "keywords",
          "accessionValues",
          "topicCategories",
          "temporalBounding",
          "acquisitionInstruments",
          "acquisitionOperations",
          "acquisitionPlatforms",
          "contacts",
          "creators",
          "publishers",
          "thumbnailDescription",
          "creationDate",
          "revisionDate",
          "publicationDate",
          "crossReferences",
          "largerWorks",
          "useLimitation",
          "legalConstraints",
          "accessFeeStatement",
          "orderingInstructions",
          "edition",
          "dsmmAccessibility",
          "dsmmDataIntegrity",
          "dsmmDataQualityAssessment",
          "dsmmDataQualityAssurance",
          "dsmmDataQualityControlMonitoring",
          "dsmmPreservability",
          "dsmmProductionSustainability",
          "dsmmTransparencyTraceability",
          "dsmmUsability",
          "dsmmAverage",
          "updateFrequency",
          "presentationForm",
          "services"
        ]
      }
    },
    {
      "rename": {
        "field": "keywordValues",
        "target_field": "keywords",
        "ignore_missing": true
      }
    }
  ]
}
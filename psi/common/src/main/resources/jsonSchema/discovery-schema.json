{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Inventory Manager Discovery Schema",
  "description": "The shape of the discovery object generated within Inventory Manager for a successfully parsed metadata document. This is the internal metadata format used within the system and ultimately sent downstream to OneStop.",
  "type": "object",
  "properties": {
    "fileIdentifier": {
      "type": ["string", "null"]
    },
    "parentIdentifier": {
      "type": ["string", "null"]
    },
    "hierarchyLevelName": {
      "type": ["string", "null"]
    },
    "doi": {
      "type": ["string", "null"]
    },
    "purpose": {
      "type": ["string", "null"]
    },
    "status": {
      "type": ["string", "null"]
    },
    "credit": {
      "type": ["string", "null"]
    },
    "title": {
      "type": ["string", "null"]
    },
    "alternateTitle": {
      "type": ["string", "null"]
    },
    "description": {
      "type": ["string", "null"]
    },
    "keywords": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/keywordsElement"
      }
    },
    "topicCategories": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "temporalBounding": {
      "type": "object",
      "properties": {
        "beginDate": {
          "type": ["string", "null"]
        },
        "beginIndeterminate": {
          "type": ["string", "null"]
        },
        "endDate": {
          "type": ["string", "null"]
        },
        "endIndeterminate": {
          "type": ["string", "null"]
        },
        "instant": {
          "type": ["string", "null"]
        },
        "instantIndeterminate": {
          "type": ["string", "null"]
        },
        "description": {
          "type": ["string", "null"]
        }
      },
      "required": [
        "beginDate",
        "beginIndeterminate",
        "endDate",
        "endIndeterminate",
        "instant",
        "instantIndeterminate",
        "description"
      ],
      "additionalProperties": false
    },
    "spatialBounding": {
      "$ref": "#/definitions/Geometry"
    },
    "isGlobal": {
      "type": "boolean"
    },
    "acquisitionInstruments": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/instrument"
      }
    },
    "acquisitionOperations": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/operation"
      }
    },
    "acquisitionPlatforms": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/platform"
      }
    },
    "dataFormats": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/dataFormat"
      }
    },
    "links": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/link"
      }
    },
    "contacts": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/responsibleParty"
      }
    },
    "creators": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/responsibleParty"
      }
    },
    "publishers": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/responsibleParty"
      }
    },
    "thumbnail": {
      "type": ["string", "null"]
    },
    "thumbnailDescription": {
      "type": ["string", "null"]
    },
    "creationDate": {
      "type": ["string", "null"]
    },
    "revisionDate": {
      "type": ["string", "null"]
    },
    "publicationDate": {
      "type": ["string", "null"]
    },
    "citeAsStatements": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "crossReferences": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/reference"
      }
    },
    "largerWorks": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/reference"
      }
    },
    "useLimitation": {
      "type": ["string", "null"]
    },
    "legalConstraints": {
      "type": "array",
      "items": {
        "type": ["string", "null"]
      }
    },
    "accessFeeStatement": {
      "type": ["string", "null"]
    },
    "orderingInstructions": {
      "type": ["string", "null"]
    },
    "edition": {
      "type": ["string", "null"]
    },
    "dsmmAccessibility": {
      "type": "integer"
    },
    "dsmmDataIntegrity": {
      "type": "integer"
    },
    "dsmmDataQualityAssessment": {
      "type": "integer"
    },
    "dsmmDataQualityAssurance": {
      "type": "integer"
    },
    "dsmmDataQualityControlMonitoring": {
      "type": "integer"
    },
    "dsmmPreservability": {
      "type": "integer"
    },
    "dsmmProductionSustainability": {
      "type": "integer"
    },
    "dsmmTransparencyTraceability": {
      "type": "integer"
    },
    "dsmmUsability": {
      "type": "integer"
    },
    "dsmmAverage": {
      "description": "Calculated mean average of individual DSMM scores for Accessibility, Data Integrity, Data Quality Assessment, Data Quality Assurance, Data Quality Control Monitoring, Preservability, Production Sustainability, Transparency Traceability, and Usability.",
      "type": "number"
    },
    "updateFrequency": {
      "type": ["string", "null"]
    },
    "presentationForm": {
      "type": ["string", "null"]
    },
    "services": {
      "type": "array",
      "description": "List of objects that represent an SV_ServiceIdentification section, if any, of ISO 19115 XML metadata document. Empty if not present.",
      "items":{
        "type": "object",
        "$ref": "#/definitions/service"
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false,
  "definitions": {
    "dataFormat": {
      "type": "object",
      "properties": {
        "name": {
          "type": ["string", "null"]
        },
        "version": {
          "type": ["string", "null"]
        }
      },
      "required": [
        "name",
        "version"
      ],
      "additionalProperties": false
    },
    "keywordsElement": {
      "type": "object",
      "properties": {
        "values": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "type": {
          "type": ["string", "null"]
        },
        "namespace": {
          "type": "string"
        }
      },
      "required": [
        "values",
        "type",
        "namespace"
      ],
      "additionalProperties": false
    },
    "instrument": {
      "type": "object",
      "properties": {
        "instrumentIdentifier": {
          "type": ["string", "null"]
        },
        "instrumentType": {
          "type": ["string", "null"]
        },
        "instrumentDescription": {
          "type": ["string", "null"]
        }
      },
      "required": [
        "instrumentIdentifier",
        "instrumentType",
        "instrumentDescription"
      ],
      "additionalProperties": false
    },
    "link": {
      "type": "object",
      "properties": {
        "linkName": {
          "type": ["string", "null"]
        },
        "linkProtocol": {
          "type": ["string", "null"]
        },
        "linkUrl": {
          "type": ["string", "null"]
        },
        "linkDescription": {
          "type": ["string", "null"]
        },
        "linkFunction": {
          "type": ["string", "null"]
        }
      },
      "required": [
        "linkName",
        "linkProtocol",
        "linkUrl",
        "linkDescription",
        "linkFunction"
      ],
      "additionalProperties": false
    },
    "operation": {
      "type": "object",
      "properties": {
        "operationDescription": {
          "type": ["string", "null"]
        },
        "operationIdentifier": {
          "type": ["string", "null"]
        },
        "operationStatus": {
          "type": ["string", "null"]
        },
        "operationType": {
          "type": ["string", "null"]
        }
      },
      "required": [
        "operationDescription",
        "operationIdentifier",
        "operationStatus",
        "operationType"
      ],
      "additionalProperties": false
    },
    "platform": {
      "type": "object",
      "properties": {
        "platformIdentifier": {
          "type": ["string", "null"]
        },
        "platformDescription": {
          "type": ["string", "null"]
        },
        "platformSponsor": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "platformIdentifier",
        "platformDescription",
        "platformSponsor"
      ],
      "additionalProperties": false
    },
    "reference": {
      "type": "object",
      "properties": {
        "title": {
          "type": ["string", "null"]
        },
        "date": {
          "type": ["string", "null"]
        },
        "links": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/link"
          }
        }
      },
      "required": [
        "title",
        "date",
        "links"
      ],
      "additionalProperties": false
    },
    "responsibleParty": {
      "type": "object",
      "properties": {
        "individualName": {
          "type": ["string", "null"]
        },
        "organizationName": {
          "type": ["string", "null"]
        },
        "positionName": {
          "type": ["string", "null"]
        },
        "role": {
          "type": ["string", "null"]
        },
        "email": {
          "type": ["string", "null"]
        },
        "phone": {
          "type": ["string", "null"]
        }
      },
      "required": [
        "individualName",
        "organizationName",
        "positionName",
        "role",
        "email",
        "phone"
      ],
      "additionalProperties": false
    },
    "Geometry": {
      "description": "One geometry as defined by GeoJSON",
      "oneOf": [
        {
          "$ref": "#/definitions/Point"
        },
        {
          "$ref": "#/definitions/MultiPoint"
        },
        {
          "$ref": "#/definitions/LineString"
        },
        {
          "$ref": "#/definitions/MultiLineString"
        },
        {
          "$ref": "#/definitions/Polygon"
        },
        {
          "$ref": "#/definitions/MultiPolygon"
        }
      ]
    },
    "Point": {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "Point"
          ]
        },
        "coordinates": {
          "$ref": "#/definitions/position"
        }
      },
      "required": [
        "type",
        "coordinates"
      ]
    },
    "MultiPoint": {
      "properties": {
        "type": {
          "enum": [
            "MultiPoint"
          ]
        },
        "coordinates": {
          "$ref": "#/definitions/positionArray"
        }
      },
      "required": [
        "type",
        "coordinates"
      ]
    },
    "LineString": {
      "properties": {
        "type": {
          "enum": [
            "LineString"
          ]
        },
        "coordinates": {
          "$ref": "#/definitions/lineString"
        }
      },
      "required": [
        "type",
        "coordinates"
      ]
    },
    "MultiLineString": {
      "properties": {
        "type": {
          "enum": [
            "MultiLineString"
          ]
        },
        "coordinates": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/lineString"
          }
        }
      },
      "required": [
        "type",
        "coordinates"
      ]
    },
    "Polygon": {
      "properties": {
        "type": {
          "enum": [
            "Polygon"
          ]
        },
        "coordinates": {
          "$ref": "#/definitions/polygon"
        }
      },
      "required": [
        "type",
        "coordinates"
      ]
    },
    "MultiPolygon": {
      "properties": {
        "type": {
          "enum": [
            "MultiPolygon"
          ]
        },
        "coordinates": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/polygon"
          }
        }
      },
      "required": [
        "type",
        "coordinates"
      ]
    },
    "position": {
      "description": "A single position",
      "type": "array",
      "minItems": 2,
      "maxItems": 2,
      "items": [
        {
          "type": "number",
          "minimum": -360,
          "maximum": 360
        },
        {
          "type": "number",
          "minimum": -90,
          "maximum": 90
        }
      ],
      "additionalItems": false
    },
    "positionArray": {
      "description": "An array of positions",
      "type": "array",
      "items": {
        "$ref": "#/definitions/position"
      }
    },
    "lineString": {
      "description": "An array of two or more positions",
      "allOf": [
        {
          "$ref": "#/definitions/positionArray"
        },
        {
          "minItems": 2
        }
      ]
    },
    "linearRing": {
      "description": "An array of four positions where the first equals the last",
      "allOf": [
        {
          "$ref": "#/definitions/positionArray"
        },
        {
          "minItems": 4
        }
      ]
    },
    "polygon": {
      "description": "An array of linear rings",
      "type": "array",
      "items": {
        "$ref": "#/definitions/linearRing"
      }
    },
    "service":{
      "type":"object"
    }
  }
}
